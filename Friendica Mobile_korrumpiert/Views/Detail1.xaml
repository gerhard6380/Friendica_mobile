    <Grid Margin="0,0,0,48">
    <StackLayout>
        <Label Text="Das ist Detail 1" />
    </StackLayout>
    </Grid>

    <Grid BackgroundColor="Blue"
          VerticalOptions="End">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="36" />        
        </Grid.ColumnDefinitions>
        <Grid>
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="End"
                         HeightRequest="48">
                <StackLayout Orientation="Vertical">
                 <styles:FontIconLabel x:Name="LabelFontIcon1"
                           TextColor="White"
                                       BackgroundColor="Lime"
                           Text="{x:Static styles:Icon.FIUserAdmin}"
                           FontSize="20"
                           FontFamily="Segoe MDL2 Assets"
                           Margin="0,0,0,0"
                                       HeightRequest="48"
                                       WidthRequest="48"
                                       HorizontalTextAlignment="Center"
                                       VerticalTextAlignment="Center"
                           HorizontalOptions="CenterAndExpand"
                           Grid.Column="0" />
                    <Label Text="Settings"
                           FontSize="12"
                           TextColor="White"
                           FontAttributes="Italic"
                           IsVisible="true"
                           Margin="4,0,4,4"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
                
                <styles:FontIconLabel x:Name="LabelFontIcon2"
                           TextColor="White"
                           Text="{x:Static styles:Icon.FIQRCode}"
                           FontSize="20"
                           FontFamily="Segoe MDL2 Assets"
                           Margin="0,0,0,0"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           Grid.Column="0" />
                <styles:FontIconLabel x:Name="LabelFontIcon3"
                           TextColor="White"
                           Text="|"
                           FontSize="20"
                           FontFamily="Segoe MDL2 Assets"
                           Margin="0,0,0,0"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           Grid.Column="0" />
                <styles:FontIconLabel x:Name="LabelFontIcon4"
                           TextColor="White"
                           Text="{x:Static styles:Icon.FIRolesAdmin}"
                           FontSize="20"
                           FontFamily="Segoe MDL2 Assets"
                           Margin="0,0,0,0"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           Grid.Column="0" />
                <styles:FontIconLabel x:Name="LabelFontIcon5"
                           TextColor="White"
                           Text="{x:Static styles:Icon.FISettings}"
                           FontSize="20"
                           FontFamily="Segoe MDL2 Assets"
                           Margin="0,0,0,0"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           Grid.Column="0" />
            </StackLayout>
            
        </Grid>
        <styles:FontIconLabel x:Name="LabelFontIcon"
                           TextColor="White"
                           Text="..."
                           FontSize="20"
                           FontFamily="Segoe MDL2 Assets"
                           Margin="0,0,0,0"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           Grid.Column="1" />
    </Grid>
    
</ContentPage>